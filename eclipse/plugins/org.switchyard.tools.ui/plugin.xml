          priority="normal">
       <triggerPoints>
           <adapt
                 type="org.eclipse.core.resources.IProject">
              <test
                    property="org.eclipse.wst.common.project.facet.core.projectFacet"
                    value="switchyard.core">
              </test>
           </adapt>
       </triggerPoints>
       <possibleChildren>
           <instanceof
                 value="org.switchyard.tools.ui.explorer.ISwitchYardNode">
           </instanceof>
       </possibleChildren>
       <commonSorter
             class="org.switchyard.tools.ui.explorer.SwitchYardViewerSorter">
       </commonSorter>
       <commonWizard
             menuGroupId="switchyard.group"
             type="new"
             wizardId="org.switchyard.tools.ui.wizards.NewBeanServiceWizard">
          <enablement>
             <or>
                <instanceof
                      value="org.eclipse.core.resources.IProject">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.ISwitchYardRootNode">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.IComponentsNode">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.IComponentReference">
                </instanceof>
                <adapt
                      type="org.eclipse.jdt.core.IJavaElement">
                </adapt>
             </or>
          </enablement>
       </commonWizard>
       <commonWizard
             menuGroupId="switchyard.group"
             type="new"
             wizardId="org.switchyard.tools.ui.wizards.NewServiceTestWizard">
          <enablement>
             <or>
                <instanceof
                      value="org.eclipse.core.resources.IProject">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.ISwitchYardRootNode">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.IComponentService">
                </instanceof>
                <adapt
                      type="org.eclipse.jdt.core.IJavaElement">
                </adapt>
             </or>
          </enablement>
       </commonWizard>
       <commonWizard
             menuGroupId="switchyard.group"
             type="new"
             wizardId="org.switchyard.tools.ui.wizards.Java2WSDLWizard">
          <enablement>
             <or>
                <instanceof
                      value="org.eclipse.core.resources.IProject">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.ISwitchYardRootNode">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.IComponentService">
                </instanceof>
                <instanceof
                      value="org.switchyard.tools.ui.explorer.IComponentReference">
                </instanceof>
                <instanceof
                      value="org.eclipse.jdt.core.IJavaElement">
                </instanceof>
                <instanceof
                      value="org.eclipse.core.resources.IResource">
                </instanceof>
             </or>
          </enablement>
       </commonWizard>
       <commonWizard
             menuGroupId="switchyard.group"
             type="new"
             wizardId="org.switchyard.tools.ui.wizards.NewSwitchYardProjectWizard">
          <enablement>
              <or>
                  <instanceof
                          value="org.eclipse.core.resources.IWorkspaceRoot" />
                  <instanceof value="org.eclipse.core.resources.IProject"/>
                  <instanceof
                          value="org.switchyard.tools.ui.explorer.ISwitchYardNode"/>
                  <and>
                      <instanceof value="java.util.Collection"/>
                      <count value="0" />
                  </and>											
              </or>
          </enablement>
       </commonWizard>
       <actionProvider
             class="org.switchyard.tools.ui.actions.SwitchYardActionProvider"
             id="org.switchyard.tools.ui.actions.SwitchYardActionProvider">
          <enablement>
             <instanceof
                   value="org.switchyard.tools.ui.explorer.ISwitchYardNode">
             </instanceof>
          </enablement>
       </actionProvider>
    </navigatorContent>
	</extension>
	<extension
	      point="org.eclipse.ui.navigator.viewer">
