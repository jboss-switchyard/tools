  <extension
        id="projectValidator"
        name="SwitchYard Project Validator"
        point="org.eclipse.wst.validation.validatorV2">
     <validator
           class="org.switchyard.tools.ui.validation.SwitchYardProjectValidator"
           markerId="org.switchyard.tools.ui.problemMarker">
        <include>
           <rules>
              <facet
                    id="switchyard.core">
              </facet>
           </rules>
        </include>
        <include>
           <rules>
              <contentType
                    exactMatch="true"
                    id="org.switchyard.tools.ui.editor.content-type.xml">
              </contentType>
              <file
                    caseSensitive="true"
                    name="switchyard.xml"
                    type="file">
              </file>
           </rules>
        </include>
        <exclude>
           <rules>
              <file
                    caseSensitive="true"
                    name="switchyard.xml.diagram"
